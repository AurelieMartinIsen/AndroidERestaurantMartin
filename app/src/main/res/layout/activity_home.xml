<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/dessert"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="90dp"
        android:backgroundTint="#03A9F4"
        android:text="Dessert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/plat"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#03A9F4"
        android:text="Plat"
        app:layout_constraintBottom_toTopOf="@+id/dessert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/entree"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#03A9F4"
        android:text="EntrÃ©e"
        app:layout_constraintBottom_toTopOf="@+id/plat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageEntree"
        android:layout_width="69dp"
        android:layout_height="61dp"
        android:layout_marginStart="37dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/imagePlat"
        app:layout_constraintEnd_toStartOf="@+id/entree"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/entree" />

    <ImageView
        android:id="@+id/imagePlat"
        android:layout_width="63dp"
        android:layout_height="62dp"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/imageDessert"
        app:layout_constraintEnd_toStartOf="@+id/plat"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/plat" />

    <ImageView
        android:id="@+id/imageDessert"
        android:layout_width="62dp"
        android:layout_height="61dp"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dessert"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/dessert" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="413dp"
        android:layout_height="415dp"
        app:layout_constraintBottom_toTopOf="@+id/entree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/restoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="cursive"
        android:text="Restaurant E-Android"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/entree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>